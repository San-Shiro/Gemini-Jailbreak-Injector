{
    "manifest_version": 3,
    "name": "Gemini Preset Injector",
    "version": "1.5",
    "description": "Adds and manages preset text to Gemini prompts.",
    "permissions": [
      "storage"
    ],
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icon48.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Gemini Preset Injector",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon48.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }